# ============================================
# Crypto Twitter Alpha Stream Configuration
# ============================================

# --------------------------------------------
# REQUIRED: Apify Configuration
# --------------------------------------------
# Your Apify API token for authentication
# Get your token from: https://console.apify.com/settings/integrations?fpr=muh
# This is REQUIRED for the application to connect to the Apify actor
APIFY_TOKEN=your_apify_token_here

# The base URL of your deployed Apify Standby Actor
# This is the URL of the crypto-twitter-tracker actor
# Supports http/https/ws/wss formats (automatically converted as needed)
# Actor page: https://apify.com/muhammetakkurtt/crypto-twitter-tracker?fpr=muh
APIFY_ACTOR_URL=wss://muhammetakkurtt--crypto-twitter-tracker.apify.actor

# --------------------------------------------
# Stream Configuration
# --------------------------------------------
# Select which WebSocket channels to connect to (comma-separated)
# Options: all, tweets, following, profile
# - all: All Twitter events (posts, profile updates, following changes)
# - tweets: Only new tweet/post events
# - following: Only following/unfollowing events
# - profile: Only profile update events
# You can specify multiple channels: all,tweets or just one: tweets
CHANNELS=all

# --------------------------------------------
# Event Filters
# --------------------------------------------
# Filter events by specific Twitter usernames (comma-separated, no spaces)
# 
# ACTOR-SIDE FILTERING: This enables filtering at the source!
# - The actor filters events before delivering them to your client
# - You only receive events from the users you specify
# - This reduces the number of events delivered to your client
#
# IMPORTANT: Check the active users list BEFORE configuring filters!
# Only configure usernames that are in the actor's monitored list.
# Invalid usernames will result in NO events for those users.
#
# To check active users:
# curl -H "Authorization: Bearer YOUR_TOKEN" \
#      https://muhammetakkurtt--crypto-twitter-tracker.apify.actor/active-users
#
# Leave empty to receive events from all tracked users
# Example with multiple users: elonmusk,vitalikbuterin,cz_binance
USERS=

# Filter events by keywords (comma-separated, case-insensitive)
# This is client-side filtering applied after events are received
# Leave empty to receive all events regardless of content
# Example: bitcoin,ethereum,crypto,defi
KEYWORDS=

# --------------------------------------------
# Output Channels
# --------------------------------------------
# Enable/disable CLI output (live stream in terminal)
CLI_ENABLED=true

# Enable/disable web dashboard
DASHBOARD_ENABLED=true

# Dashboard web server port
# The dashboard will be accessible at http://localhost:3000
DASHBOARD_PORT=3000

# --------------------------------------------
# Alert Configuration - Telegram
# --------------------------------------------
# Enable Telegram alerts (true/false)
TELEGRAM_ENABLED=false

# Telegram bot token from @BotFather
# Get your token by creating a bot: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=

# Telegram chat ID where alerts will be sent
# Get your chat ID by messaging: https://t.me/userinfobot
TELEGRAM_CHAT_ID=

# --------------------------------------------
# Alert Configuration - Discord
# --------------------------------------------
# Enable Discord alerts (true/false)
DISCORD_ENABLED=false

# Discord webhook URL for sending alerts
# Create a webhook in your Discord server settings
# Example: https://discord.com/api/webhooks/123456789/abcdefg
DISCORD_WEBHOOK_URL=

# --------------------------------------------
# Alert Configuration - Generic Webhook
# --------------------------------------------
# Enable generic webhook alerts (true/false)
WEBHOOK_ENABLED=false

# Generic webhook URL for POST requests
# The application will POST JSON event data to this URL
WEBHOOK_URL=

# --------------------------------------------
# Advanced Configuration
# --------------------------------------------
# Enable debug logging (true/false)
# When enabled, shows detailed logs for debugging
# Set to false in production for cleaner output
DEBUG=false

# Enable file logging (true/false)
# When enabled, logs are written to files
# WARNING: Ensure sensitive data is properly sanitized
FILE_LOGGING=false

# Health monitor HTTP server port
# Status endpoint will be available at http://localhost:3001/status
HEALTH_PORT=3001

# Deduplication cache TTL in seconds (default: 60)
# Events are cached for this duration to prevent duplicates
DEDUP_TTL=60

# WebSocket reconnection settings
# Initial delay before first reconnection attempt (milliseconds)
RECONNECT_INITIAL_DELAY=1000

# Maximum delay between reconnection attempts (milliseconds)
RECONNECT_MAX_DELAY=30000

# Backoff multiplier for exponential backoff (default: 2.0)
RECONNECT_BACKOFF_MULTIPLIER=2.0

# Maximum number of reconnection attempts (0 = infinite)
RECONNECT_MAX_ATTEMPTS=0

# Active users refresh interval in milliseconds (default: 240000 = 4 minutes)
ACTIVE_USERS_REFRESH_INTERVAL=240000

# CLI statistics display interval in milliseconds (default: 60000 = 1 minute)
CLI_STATS_INTERVAL=60000

# Alert rate limit: maximum alerts per minute per channel (default: 10)
ALERT_RATE_LIMIT=10
